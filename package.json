{
  "name": "HueViewer",
  "version": "0.0.1",
  "description": "",
  "main": "__dist/main.js",
  "build": {
    "appId": "com.electron.hueviewer",
    "directories": {
      "output": "__build"
    },
    "files": [
      "__dist"
    ],
    "mac": {
      "target": [
        "dmg"
      ]
    },
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "scripts": {
    "electron": "electron .",
    "build": "webpack --display-error-details",
    "build-watch": "webpack --display-error-details -w",
    "electron-build-mac": "electron-builder --mac --x64",
    "electron-build-mac-app": "electron-builder --mac --x64 --dir",
    "electron-build-win": "electron-builder --win --x64"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/ara-ta3/HueViewer.git"
  },
  "author": "",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/ara-ta3/HueViewer/issues"
  },
  "homepage": "https://github.com/ara-ta3/HueViewer#readme",
  "devDependencies": {
    "@material-ui/core": "^4.11.4",
    "@material-ui/icons": "^4.11.2",
    "@types/electron": "^1.6.10",
    "@types/node": "^15.0.2",
    "@types/react": "^17.0.4",
    "@types/react-dom": "^17.0.3",
    "@types/react-redux": "^7.1.16",
    "electron": "^12.0.6",
    "electron-builder": "^22.10.5",
    "prettier": "^2.2.1",
    "ts-loader": "^8.1.0",
    "typescript": "^4.2.4",
    "webpack": "^4.46.0",
    "webpack-cli": "^3.3.12"
  },
  "dependencies": {
    "@types/node-fetch": "^2.5.10",
    "electron-store": "^8.0.0",
    "fp-ts": "^2.10.4",
    "node-fetch": "^2.6.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-redux": "^7.2.4",
    "redux": "^4.1.0",
    "redux-thunk": "^2.3.0"
  }
}
